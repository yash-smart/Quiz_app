<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizzes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/main.css" rel="stylesheet">
</head>
<body>
    <ul class="nav nav-pills">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/main/<%= id %>">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/add_quiz/<%= id %>">Create quiz</a>
        </li>
    </ul>
    <% if (locals.data.length > 0) {%>
        <% for(let i = 0;i<data.length;i++) { %>
            <% if(data[i].status == 0) { %>
                <a href="/quiz/<%= data[i].id %>">
                    <div class="quizzes">
                        <p class="quiz_title"><%= data[i].quiz_name %></p>
                        <p>Accepting responses</p>  
                    </div>
                </a>
                <button class="<%= data[i].id %>"><img src="/copy.svg"></button>
            <% }else { %>
                <a href="/quiz/<%= data[i].id %>" >
                    <div class="quizzes">
                        <p class="quiz_title"><%= data[i].quiz_name %></p>
                        <p>Not accepting responses</p>
                    </div>
                </a>
            <% } %>
        <% } %>
    <% } else {%>
        <h1>No quizzes found</h1>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        function button_click() {
            // console.log(this)
            let id = this.className
            navigator.clipboard.writeText('localhost:3000/form/'+id);
        }
        let buttons = document.querySelectorAll('button');
        // console.log(arr1)
        // let id = null;
        for (let i=0;i<buttons.length;i++) {
            // console.log(buttons[i].className)
            buttons[i].addEventListener('click',button_click);
            // navigator.clipboard.writeText('Test');
            
        }
    </script>
</body>
</html>